<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".personal"
        android:background="?attr/colorBackgroundFloating"
       >

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Educational Details"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#312878"
            android:textSize="30sp"
            android:paddingLeft="20sp"
            android:paddingTop="20sp"
            android:layout_margin="10sp"
            />
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_property"
            android:paddingTop="30sp"
            android:text="SSC"
            android:textSize="24sp"
            android:paddingLeft="20sp"
            android:layout_margin="10sp"/>


        <EditText
            android:id="@+id/s1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:drawableBottom="@android:color/holo_blue_dark"
            android:fadingEdge="horizontal"
            android:fitsSystemWindows="true"
            android:selectAllOnFocus="true"
            android:shadowColor="#2196F3"
            android:soundEffectsEnabled="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#1D8DE9"
            android:textSize="24sp"
            android:paddingLeft="20sp"
            android:hint="School Name"
            android:layout_margin="10sp"/>

        <EditText
            android:id="@+id/s2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:hint="Percentage"
            android:textColor="#1D8DE9"
            android:textSize="24sp"
            android:paddingLeft="20sp"
            android:layout_margin="10sp"/>

        <EditText
            android:id="@+id/s3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:textColor="#1D8DE9"
            android:textSize="24sp"
            android:paddingLeft="20sp"
            android:hint="Year of Passing"
            android:layout_margin="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_property"
            android:paddingTop="30sp"
            android:text="HSC/Diploma"
            android:textSize="24sp"
            android:paddingLeft="20sp"/>
        <EditText
            android:id="@+id/d1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:drawableBottom="@android:color/holo_blue_dark"
            android:fadingEdge="horizontal"
            android:fitsSystemWindows="true"
            android:selectAllOnFocus="true"
            android:shadowColor="#2196F3"
            android:soundEffectsEnabled="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#1D8DE9"
            android:textSize="24sp"
            android:paddingLeft="20sp"
            android:hint="Collage Name"
            android:layout_margin="10sp"/>

        <EditText
            android:id="@+id/d2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:hint="Percentage"
            android:textColor="#1D8DE9"
            android:textSize="24sp"
            android:paddingLeft="20sp"
            android:layout_margin="10sp"/>

        <EditText
            android:id="@+id/d3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:textColor="#1D8DE9"
            android:textSize="24sp"
            android:paddingLeft="20sp"
            android:hint="Year of Passing"
            android:layout_margin="10sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_property"
            android:paddingTop="30sp"
            android:text="BE/BTec"
            android:textSize="24sp"
            android:paddingLeft="20sp"
            android:layout_margin="10sp"/>
        <EditText
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:drawableBottom="@android:color/holo_blue_dark"
            android:fadingEdge="horizontal"
            android:fitsSystemWindows="true"
            android:selectAllOnFocus="true"
            android:shadowColor="#2196F3"
            android:soundEffectsEnabled="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#1D8DE9"
            android:textSize="24sp"
            android:paddingLeft="20sp"
            android:hint="Collage Name"
            android:layout_margin="10sp"/>

        <EditText
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:hint="Percentage"
            android:textColor="#1D8DE9"
            android:textSize="24sp"
            android:paddingLeft="20sp"
            android:layout_margin="10sp"/>

        <EditText
            android:id="@+id/b3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:textColor="#1D8DE9"
            android:textSize="24sp"
            android:paddingLeft="20sp"
            android:hint="Year of Passing"
            android:layout_margin="10sp"/>
        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/view_property"
            android:text="Next"
            android:textAllCaps="true"
            android:textColor="#312878"
            android:textSize="35sp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_navigate_next_black_24dp"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:layout_margin="10sp"
            />




    </LinearLayout>

</ScrollView>